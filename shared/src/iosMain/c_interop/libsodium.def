language = Objective-C
package = libsodium

# Only include this for iOS targets
targets = ios_arm64, ios_simulator_arm64

# Link against the system libsodium
staticLibraries = libsodium.a
libraryPaths = /opt/homebrew/Cellar/libsodium/1.0.20/lib

# Headers to include
headers = sodium.h

# Explicitly specify the header filter
headerFilter = sodium/**

depends = Foundation

compilerOpts = -I/opt/homebrew/Cellar/libsodium/1.0.20/include
linkerOpts = -L/opt/homebrew/Cellar/libsodium/1.0.20/lib -lsodium
